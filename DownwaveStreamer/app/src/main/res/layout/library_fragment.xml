<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/library_fragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs499app.downwavestreamer.view.LibraryFragment"
    android:background="@drawable/library_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="95"
            android:gravity="center"
            android:text="LIBRARY"
            android:textSize="40sp"
            android:typeface="serif"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_weight="5"
            android:background="@color/DeepSkyBlue"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listview_playlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_weight="9">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_playlist_float_button"
            android:tint="@color/white"
            app:backgroundTint="@color/DeepSkyBlue"
            android:src="@drawable/add_cross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:hapticFeedbackEnabled="true"
            android:scaleType="center"
            app:pressedTranslationZ="2dp"/>
    </RelativeLayout>


</LinearLayout>